{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2024",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": false,
    "noLib": true
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist"]
}
